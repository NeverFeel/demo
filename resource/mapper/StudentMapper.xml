<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.xinfuli.yy.demo.mapper.StudentMapper">

	<resultMap id="AllColumnMap" type="com.xinfuli.yy.demo.domain.Student">
		<result column="id" property="id" />
		<result column="username" property="username" />
		<result column="score" property="score" />
		<result column="age" property="age" />
		<result column="address" property="address" />
	</resultMap>

	<sql id="all_column">
		id,
		username,
		score,
		age,
		address
	</sql>

	<insert id="insert" parameterType="com.xinfuli.yy.demo.domain.Student">
		INSERT INTO student
		(id,username,score,age,address)
		VALUES
		(#{student.id},#{student.username},#{student.score},#{student.age},#{student.address})
	</insert>

	<update id="update" parameterType="com.xinfuli.yy.demo.domain.Student">
		UPDATE student
		<set>
			<if test="username != null"> username = #{student.username}, </if>
			<if test="score != null"> score = #{student.score}, </if>
			<if test="age != null"> age = #{student.age}, </if>
			<if test="address != null"> address = #{student.address}</if>
		</set>
		WHERE id = #{student.id}
	</update>

</mapper>